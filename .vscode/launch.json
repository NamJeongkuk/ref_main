  "version": "0.2.0",
  "configurations": [
    {
      "name": "TDD",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/test/Build/multi-target-starter-kit_tests",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "linux": {
        "MIMode": "gdb"
      },
      "osx": {
        "MIMode": "lldb"
      },
      "preLaunchTask": "tdd_vscode_debug",
    },
    {
      "name": "rx130",
      "cwd": "${workspaceRoot}",
      "request": "launch",
      "type": "cortex-debug",
      "executable": "${workspaceFolder}/build/rx130/rx130.elf",
      "device": "R5F51308",
      "servertype": "jlink",
      "interface": "FINE",
      "jlinkscript": "${workspaceFolder}/build/rx130/debug.jlink",
      "armToolchainPath": "${workspaceFolder}/tools/kpit-rx/tc/bin/",
      "serverpath": "${workspaceFolder}/build/rx130/jlink_gdb_server_wrapper.sh",
      "preLaunchTask": "rx130_vscode_debug",
      "svdFile": "${workspaceFolder}/tools/kpit-rx/svd/rx130.svd"
    }
  ]
}
